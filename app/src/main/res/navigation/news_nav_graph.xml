<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_nav_graph"
    app:startDestination="@id/headlineFragment2">

    <fragment
        android:id="@+id/articleFragment2"
        android:name="com.example.newsicca.ui.fragments.ArticleFragment"
        android:label="ArticleFragment" >

        <argument
            android:name="article"
            app:argType="com.example.newsicca.models.Article"/>
    </fragment>

    <fragment
        android:id="@+id/favouritesFragment3"
        android:name="com.example.newsicca.ui.fragments.FavouritesFragment"
        android:label="FavouritesFragment" >
        <action
            android:id="@+id/action_favouritesFragment3_to_articleFragment2"
            app:destination="@id/articleFragment2" />
    </fragment>
    <fragment
        android:id="@+id/headlineFragment2"
        android:name="com.example.newsicca.ui.fragments.HeadlineFragment"
        android:label="HeadlineFragment" >
        <action
            android:id="@+id/action_headlineFragment2_to_articleFragment2"
            app:destination="@id/articleFragment2" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment3"
        android:name="com.example.newsicca.ui.fragments.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment3_to_articleFragment2"
            app:destination="@id/articleFragment2" />
    </fragment>
</navigation>